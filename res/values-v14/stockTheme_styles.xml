<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
<!-- This file defines styles that we can then apply to entire widgets
within our theme xml file (as to make theme file less had to read) -->
    
<style name="textstyle" parent="@android:style/Widget.TextView">
    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:fontFamily">sans-serif</item>
</style>

<style name="buttonstyle">
	<item name="android:background">@drawable/stockbutton</item>
	<item name="android:minWidth">100dp</item>
	<item name="android:textColor">@color/peach</item>
	<item name="android:textSize">16sp</item>
	<item name="android:clickable">true</item>
	<item name="android:fontFamily">sans-serif-medium</item>
</style>

</resources>