<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- This layer is just something to use as a BG as opposed to just white -->
    
<item>
		<shape android:shape="rectangle">
		 	<solid android:color="@color/white" />
		 	<corners android:radius="2dp" />
		</shape>
</item>

<item android:bottom="-200dp">
   <rotate android:fromDegrees="150"
       	   android:pivotX="20%"
       	   android:pivotY="50%">
		<shape android:shape="rectangle">
		 	<solid android:color="@color/strawberry_cream" />
		</shape>
	</rotate>
</item>

<item android:bottom="-100dp">
   <rotate android:fromDegrees="30"
           android:pivotY="-50%"
           android:pivotX="150%">
		<shape android:shape="rectangle">
		 	<solid android:color="@color/strawberry" />
		</shape>
	</rotate>
</item>


</layer-list>
