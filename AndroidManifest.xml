<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmu.amliu.stockpile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/stockpile_Theme_gen" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StockActivity"
            android:label="@string/title_activity_stock"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.cmu.amliu.stockpile.MainActivity" />
        </activity>
        <activity
            android:name=".MakelistActivity"
            android:label="@string/title_activity_makelist"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.cmu.amliu.stockpile.MainActivity" />
        </activity>
        <activity
            android:name=".RottersActivity"
            android:label="@string/title_activity_rotters"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.cmu.amliu.stockpile.MainActivity" />
        </activity>
        <activity
            android:name=".StockrecordActivity"
            android:label="@string/title_activity_stockrecord" >
        </activity>
        <activity
            android:name=".FoodActivity"
            android:label="@string/title_activity_food" >
        </activity>
        <activity
            android:name=".SpeechcraftActivity"
            android:label="@string/title_activity_speechcraft" >
        </activity>
        <activity
            android:name=".TextcraftActivity"
            android:label="@string/title_activity_textcraft" >
        </activity>
    </application>

</manifest>
